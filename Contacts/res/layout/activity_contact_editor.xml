<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical">

	<LinearLayout android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    
	    >
	    <ImageView android:id="@+id/img_photo_add"
	        android:layout_width="96dp"
	        android:layout_height="96dp"
	        android:src="@drawable/ic_contact_picture"
	        android:background="@null"/>
	    
	    <EditText android:id="@+id/et_name_add"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:textSize="15sp"
	        android:layout_weight="1"
	        android:hint="@string/name"
	        />
	</LinearLayout>
	
	<EditText android:id="@+id/et_phone_add"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:textSize="15sp"
	        android:maxLength="17"
	        android:inputType="phone"
	        android:hint="@string/phone"
	        />
	<EditText android:id="@+id/et_address_add"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:textSize="15sp"
	        android:hint="@string/address"
	        />
	<EditText android:id="@+id/et_note_add"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:textSize="15sp"
	        android:hint="@string/note"
	        />
	<RelativeLayout android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical">
	    <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="标签"
	        android:textSize="20sp"
	        android:layout_marginLeft="15dp"
	        android:layout_marginTop="10dp"/>
	    <ImageButton android:id="@+id/ibtn_label_add"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:src="@drawable/easyicon_label_add"
	        android:background="@null"
	        android:layout_margin="5dp"/>
	</RelativeLayout>

	<com.wecall.contacts.view.FlowLayout 
	    android:id="@+id/fl_editor_label"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    
	</com.wecall.contacts.view.FlowLayout>
</LinearLayout>
